<section>
    <h2>Write new post</h2>
    <form class="new-post">
        <div>
            <label for="post-title">Post Title</label>
            <input type="text" id="post-title" name="post-title" />
        </div>

        <div>
            <label for="post-contents">Post Body</label>
            <input type="text" id="post-contents" name="post-contents" />
        </div>

        <button type="submit" class="button">Create</button>
    </form>
</section>

{{#if posts.length}}
<section>
    <h3>Previous posts:</h3>
    <ul>
        {{#each posts as |post| }}
        <li>
            {{> single-post post}}
            <a href="/dashboard/edit/{{post.id}}" class="links">Edit post</a>
        </li>
        {{/each}}
    </ul>
</section>
{{/if}}

<script src="/javascript/new-post.js"></script>