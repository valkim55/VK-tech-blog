<article class="post">
    <div class="title">
        <a href="/post/{{id}}" target="_blank">{{title}}</a>
    </div>

    <div class="contents">
        <p>{{contents}}</p>
    </div>

    <div class="meta">
        By {{user.first_name}} {{user.last_name}} (username: {{user.username}}) on {{format_date created_at}}
        <a href="/post/{{id}}">see comments {{comments.length}}</a>
    </div>
</article>